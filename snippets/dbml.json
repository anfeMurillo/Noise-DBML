{
	"DBML Table": {
		"prefix": "table",
		"body": [
			"Table ${1:table_name} {",
			"  id integer [primary key, increment]",
			"  ${2:column_name} ${3:type}",
			"",
			"  Note: '''",
			"  schema: ${4:public}",
			"  ${5:# Your documentation here...}",
			"  '''",
			"}"
		],
		"description": "Creates a DBML table with base structure and notes"
	},
	"DBML TableGroup": {
		"prefix": "group",
		"body": [
			"TableGroup ${1:group_name} {",
			"  ${2:table_name}",
			"}"
		],
		"description": "Creates a DBML table group"
	},
	"DBML Project": {
		"prefix": "project",
		"body": [
			"Project ${1:project_name} {",
			"  database_type: '${2:PostgreSQL}'",
			"  Note: '${3:Description of the project}'",
			"}"
		],
		"description": "Creates a DBML project definition"
	},
	"DBML Enum": {
		"prefix": "enum",
		"body": [
			"Enum ${1:enum_name} {",
			"  ${2:value}",
			"}"
		],
		"description": "Creates a DBML enum definition"
	},
	"DBML Indexes": {
		"prefix": "indexes",
		"body": [
			"indexes {",
			"  ${1:column_name}",
			"}"
		],
		"description": "Creates a DBML indexes block"
	},
	"DBML One-to-One": {
		"prefix": "oto",
		"body": [
			"Ref: ${1:table1}.${2:column} - ${3:table2}.${4:column}"
		],
		"description": "Create a one-to-one reference"
	},
	"DBML One-to-Many": {
		"prefix": "otm",
		"body": [
			"Ref: ${1:table1}.${2:column} < ${3:table2}.${4:column}"
		],
		"description": "Create a one-to-many reference"
	},
	"DBML Many-to-One": {
		"prefix": "mto",
		"body": [
			"Ref: ${1:table1}.${2:column} > ${3:table2}.${4:column}"
		],
		"description": "Create a many-to-one reference"
	},
	"DBML Many-to-Many": {
		"prefix": "mtm",
		"body": [
			"Table ${1:join_table_name} {",
			"  ${2:table1}_id integer [ref: > ${3:table1}.id]",
			"  ${4:table2}_id integer [ref: > ${5:table2}.id]",
			"  primary key (${2:table1}_id, ${4:table2}_id)",
			"}"
		],
		"description": "Create a many-to-many join table"
	}
}